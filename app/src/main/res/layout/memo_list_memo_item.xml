<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="memoItem"
            type="com.muijp.hibi.ui.recyclerview.memolist.MemoListItem.MemoItem" />
        <variable
            name="listener"
            type="com.muijp.hibi.ui.recyclerview.memolist.MemoListListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/regular_margin"
        android:paddingVertical="@dimen/half_margin"
        android:onClick="@{() -> listener.handleClickMemoItem(memoItem)}">

        <TextView
            android:id="@+id/memo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/memo_baloon"
            android:padding="@dimen/memo_baloon_margin"
            android:text="@{memoItem.text}"
            style="@style/MemoTextAppearance"
            tools:text="今日は多摩川に散歩に行った。" />

        <TextView
            android:id="@+id/memo_date_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{memoItem.formattedTime}"
            style="@style/MemoTimeAppearance"
            tools:text="2021-09-26" />

    </LinearLayout>

</layout>