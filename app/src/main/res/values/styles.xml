<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="DateHeaderTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondaryVariant</item>
    </style>

    <style name="MemoTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MemoTimeAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>